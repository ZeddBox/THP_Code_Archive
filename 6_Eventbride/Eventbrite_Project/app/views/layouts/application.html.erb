<!DOCTYPE html>
<html>
  <head>
    <title>EventbriteProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">ZedEventBrite</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"  aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "", root_path, class:"nav-link"%>
            </li>
            <li class="nav-item active">
              <%= link_to "", root_path, class:"nav-link"%>
            </li>
            <li class="nav-item active">
              <%= link_to "Accueil", root_path, class:"nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Ajouter Event", new_event_path, class:"nav-link" %>
            </li>
          </ul>
       <% if 1 == 0 %>
          <div class="navbar-av" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <%= link_to "Mon Profil", "#", class: "nav-link"%>
                </li>
                <li class="nav-item">
                  <p class="nav-link">/</p>
                </li>
                <li class="nav-item">
                    <%= link_to "Se déconnecter", "#", method: :delete, class: "nav-link"%>
                </li>
            </ul>
          </div>
        <% else %>
          <div class="navbar-av" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <%= link_to "Se Connecter", new_user_path, class: "nav-link"%>
                </li>
                <li class="nav-item">
                  <p class="nav-link">/</p>
                </li>
                <li class="nav-item">
                  <%= link_to "Inscription", new_user_path, class: "nav-link"%>
                </li>
            </ul>
          </div>
        <% end %>
        </div>
      </nav>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>

    <%= yield %>


  <footer class="footer">
    <div class="container text-center py-3">© Made by <%=link_to "ZeddBox", 'https://github.com/ZeddBox', target: '_blank', class:"text-dark"%>, with ♥ </div>
  </footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
