<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <div class="container alert alert-danger d-flex justify-content-center alert-dismissible fade show" role="alert"><%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
<% end %>

<h1 class="display-5 text-center mt-5"> INSCRIPTION </h1>

<%# <div class="container mt-2 form-group"> %>
<div class="container-md new-user">
  <div class="card" style="30rem">
  <div class="card-body">
    <div class="form-group">
 <%= form_tag url_for(action: 'create'), method: "post" do %>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <%= label_tag 'Prénom' %>
      <%= text_field_tag 'first_name', @user.first_name, class:"form-control", required: true %>
      <br />
      <%= label_tag 'Nom' %>
      <%= text_field_tag 'last_name', @user.last_name, class:"form-control", required: true %>
      <br />
      <%= label_tag 'Age' %>
      <%= text_field_tag 'age', @user.age, class:"form-control", required: true %>
      <br />
      <%= label_tag '📖 Description' %>
      <%= text_area_tag 'description', @user.description, class:"form-control", required: true %>
      <br /> 
      <%= label_tag '🏙 Ville ' %>
      <%= text_field_tag 'city', @user.city, class:"form-control", required: true %>
      <br />
      <%= label_tag '📧 Email' %>
      <%= text_field_tag 'email', @user.email, class:"form-control", required: true %>
      <br />
      <%= label_tag '🔑 Mot de passe' %>
      <%= text_field_tag 'password', @user.password, class:"form-control", type:"password", required: true %>
      <br />      
      <%= label_tag '🔑 Confirmation du mot de passe' %>
      <%= text_field_tag 'password_confirmation', @user.password_confirmation, class:"form-control", type:"password", required: true %>
      <br />


      <%= submit_tag "Inscription", class:"btn btn-info"%>

    <% end %>
</div>  
</div>
</div>
</div>
<div class="container-md mt-2"></div>