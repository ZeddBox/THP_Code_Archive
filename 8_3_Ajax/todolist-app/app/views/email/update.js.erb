if (<%= @email.read %>) {
  document.getElementById('btn-read').innerHTML = "Mark as not read"
  document.getElementById('btn-read').classList.remove("btn-outline-success")
  document.getElementById('btn-read').classList.add("btn-outline-warning")
  document.getElementById('<%= @email.id %>').classList.remove("list-group-item-secondary")
} else {
  document.getElementById('btn-read').innerHTML = "Mark as read"
  document.getElementById('btn-read').classList.remove("btn-outline-warning")
  document.getElementById('btn-read').classList.add("btn-outline-success")
  document.getElementById('<%= @email.id %>').classList.add("list-group-item-secondary")
}